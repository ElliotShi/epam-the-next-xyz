<h2>Dashboard</h2>
<div id="stuff">
	<h4>Welcome <em>{{user.name}}</em></h4>

	{{#each stuff}}
	<p>{{ greeting }} {{ subject }}</p>
	{{/each}}

	<hr>

	<button id="addArticle" class="btn btn-inverse btn-lg">Add New Article</button>
  <div class="addForm">
    <hr >
    <form action="/api/articles" method="post">
      <div class="form-group">
        <label for="exampleInputName1">Title</label>
        <input name="title" type="name" class="form-control" id="exampleInputName1" placeholder="Title" required>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Image</label>
        <input name="image" type="text" class="form-control" id="exampleInputEmail1" placeholder="Image" required>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Author</label>
        <input name="author" type="name" class="form-control" id="exampleInputPassword1" placeholder="Author" required>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword2">Summary</label>
        <input name="summary" type="text" class="form-control" id="exampleInputPassword2" placeholder="Summary" required>
      </div>
      <button type="submit" class="btn btn-inverse btn-lg">Add</button>
    </form>
  </div>
</div>

